@model MvcApplication1.Models.Quiz

@{
    ViewBag.Title = "Edit";
}

<h2  align="center" class="bg-danger"><font color="red"><em>Edit Quiz...!</em></font></h2><br /><br />

<form class="container" align="center" method="post" action="/Admin/Edit1/@Model.Id" >
    <font size="3"><strong>Question </strong> <input type="text" name="ques" id="q" value="@Model.Question"/></font><br /><br />
    <p><font size="3"><strong>Multiple Choices</strong></font></p>
    <strong>A. </strong><input type="text" name="a" id="c1" value="@Model.OptionA"/>
    &nbsp &nbsp <strong>B.</strong><input type="text" name="b" id="c2" value="@Model.OptionB"/><br /><br />
    <strong>C.</strong> <input type="text" name="c" id="c3" value="@Model.OptionC"/>
    &nbsp &nbsp <strong>D. </strong><input type="text" name="d" id="c4" value="@Model.OptionD"/><br /><br />
    <p><font size="3"><strong>Correct Answer</strong></font></p>
    <input type="text" name="correct" id="c" value="@Model.Correct"/>
    <br /><br />
    <div align="center">
        <input type ="submit" class="btn btn-primary" name="Submit" value="Edit Quiz"/><br /><br />
    </div> 
