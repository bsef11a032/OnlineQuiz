@{
    ViewBag.Title = "AddQuiz";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h2 align="center" class="bg-danger"><font color="red"><em>Add Quiz...!</font></em></h2><br /><br />
<div class="container">
    <fieldset>
    <h4><strong><font color="green"> Select the Category of Quiz:</font></strong></h4>
        <input type="radio" value="cs" name="r1" id="r1">
        <font size="2" face="Arial Black" color="black">
            Computer Science 
            </font><br />
         <input type="radio" value="gk" name="r1" id="r2">
        <font size="2" face="Arial Black" color="black">
            General Knowledge
            </font><br />
             <input type="radio" value="gs" name="r1" id="r4">
