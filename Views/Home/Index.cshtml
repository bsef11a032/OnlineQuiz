@model MvcApplication1.Models.UserInfo

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" align="center">

          @using (Html.BeginForm("Redirect", "Home", FormMethod.Post , new {enctype="multipart/form-data"} ))
      
          {
               @Html.AntiForgeryToken()
              @Html.ValidationSummary(true)
              <div class="row">
      <div class="col-md-2">
      <h3 class="form-signin-heading">Please sign in</h3><br />
          
             

        @Html.TextBoxFor(m => m.Username, new {Class = "form-control", Placeholder = "Username" });
          @Html.ValidationMessageFor(m=>m.Username)
        @Html.TextBoxFor(m => m.Password, new {Class = "form-control", Placeholder = "Password", Type="Password" })<br />
                @Html.ValidationMessageFor(m=>m.Password)
        <button class="btn btn-large btn-primary" type="submit">Sign in</button><br /><br />
          <a href="/Home/Register">Don't Have An Account?</a>
          </div>
          <img src="~/Images/paathshala.jpg", class="pull-right" />
          </div>
          }

</div>
        
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}